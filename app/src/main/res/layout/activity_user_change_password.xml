<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.application.watermeter.user_change_password">

    <EditText
        android:id="@+id/user_old_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Enter your old password"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:background="@drawable/button_round"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/user_new_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/up"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textColorHint="@android:color/white"
        android:ems="10"
        android:hint="Enter new password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/user_new_password2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/down"
        android:textColorHint="@android:color/white"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Re-enter your password"
        android:padding="5dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/change"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:onClick="user_change"
        android:background="@drawable/button_round"
        android:textColor="@android:color/white"
        android:ems="10"
        android:text="CHANGE" />

</RelativeLayout>
